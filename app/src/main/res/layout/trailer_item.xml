<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/trailer_title_id"
        android:text="Black Panther"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/trailer_type_title_id"
        android:text="type:"
        android:textSize="12sp"
        android:layout_below="@id/trailer_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/trailer_type_id"
        android:text="Trailer"
        android:textSize="12sp"
        android:layout_toRightOf="@id/trailer_type_title_id"
        android:layout_below="@id/trailer_title_id"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/trailer_site_title_id"
        android:text="site:"
        android:textSize="12sp"
        android:layout_below="@id/trailer_type_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/trailer_site_id"
        android:text="Trailer"
        android:textSize="12sp"
        android:layout_toRightOf="@id/trailer_site_title_id"
        android:layout_below="@id/trailer_type_id"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>