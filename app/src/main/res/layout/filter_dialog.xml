<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/filter_title_id"
        android:text="@string/filters"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_title_id"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/most_popular_first"
            android:textSize="20sp"/>
        <RadioButton android:id="@+id/radio_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highest_rated_first"
            android:textSize="20sp"/>
        <RadioButton android:id="@+id/radio_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favourites"
            android:textSize="20sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/applyFilterBtn_id"
        android:text="Apply filter"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="#65cc65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>